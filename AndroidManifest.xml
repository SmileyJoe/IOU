<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.joedev.iou"
    android:versionCode="1"
    android:versionName="1.0" >
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-sdk android:minSdkVersion="7" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" 
        android:theme="@style/Theme.Main.Dark"
        android:windowSoftInputMode="stateHidden">
        
		
        <!-- Broadcast Receiver that will process AppWidget updates -->
        <receiver android:name=".WidgetQuickAdd" android:label="@string/widget_quick_add_title">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <!-- Broadcast Receiver that will also process our self created action -->
			</intent-filter>
			<meta-data 
			    android:name="android.appwidget.provider"
				android:resource="@xml/widget_quick_add_meta" />
        </receiver>
        
        <receiver android:name=".WidgetBalance" android:label="@string/widget_balance_title">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <!-- Broadcast Receiver that will also process our self created action -->
			</intent-filter>
			<meta-data 
			    android:name="android.appwidget.provider"
				android:resource="@xml/widget_balance_meta" />
        </receiver>
        
        <activity
            android:name=".Main"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
   		<activity android:name=".UserNew" 
			android:label="@string/bar_title_user_new">
   		</activity>
   		<activity android:name=".UserList" 
			android:label="@string/bar_title_user_list">
   		</activity>
   		<activity android:name=".GroupList" 
			android:label="@string/bar_title_group_list">
   		</activity>
   		<activity android:name=".UserView" 
   		    android:label="@string/bar_title_user_view">
		</activity>
  		<activity android:name=".PaymentNew" 
			android:label="@string/bar_title_payment_new"/>
        <intent-filter>
			<action
				android:name="com.joedev.iou.Constants.ACTION_WIDGET_QUICK_ADD"/>
		</intent-filter>
  	   	<activity android:name=".Settings" 
			android:label="Settings"/>
  	   	<activity android:name=".PopupDelete" 
			android:label=""
			android:theme="@style/Holo.Theme.Dialog"/>
  	   	<activity android:name=".GroupNew" 
			android:label="Group" 
			android:theme="@style/Holo.Theme.Dialog">
   		</activity>
   		<activity android:name=".GroupView" 
   		    android:label="Group">
		</activity>
		<activity android:name=".GroupPaymentNew" 
			android:label="New Payment" 
			android:theme="@style/Holo.Theme.Dialog">
   		</activity>
   		<activity android:name=".GroupPayback" 
			android:label="Payback" 
			android:theme="@style/Holo.Theme.Dialog">
   		</activity>
   		<activity android:name=".GroupUserPaymentDetails" 
			android:label="User Details" 
			android:theme="@style/Holo.Theme.Dialog">
   		</activity>
    </application>

</manifest>