		<ListPreference
		        android:title="Theme"
		        android:summary="Choose a theme"
		        android:key="theme"
		        android:defaultValue="1"/>
	</PreferenceCategory>  -->
	<PreferenceCategory
		android:title="@string/category_title_general">
		<ListPreference
		        android:title="@string/pref_title_default_start_page"
		        android:summary="@string/pref_summary_default_start_page"
		        android:key="default_start_page"
		        android:defaultValue="1"/>
    </PreferenceCategory>
	<PreferenceCategory
		android:title="@string/category_title_sections">
		<CheckBoxPreference
		        android:title="@string/pref_title_allow_individual"
		        android:defaultValue="true"
		        android:summary="@string/pref_summary_allow_individual"
		        android:key="allow_individual" />
		<CheckBoxPreference
		        android:title="@string/pref_title_allow_group"
		        android:defaultValue="true"
		        android:summary="@string/pref_summary_allow_group"
		        android:key="allow_group" />
    </PreferenceCategory>
   	<PreferenceCategory
		android:title="@string/category_title_specific_options">
	    <PreferenceScreen
			android:key="individual_preferences"
			android:title="@string/pref_screen_individual_options"
			android:summary="@string/pref_summary_individual_options">
			<PreferenceCategory
				android:title="@string/category_title_notification">
				<CheckBoxPreference
				        android:title="@string/pref_title_notification_reminders"
				        android:defaultValue="true"
				        android:summary="@string/pref_summary_notification_reminders"
				        android:key="allow_notification_reminders" />
				<CheckBoxPreference
				        android:title="@string/pref_title_notification_reminder_persistent"
				        android:defaultValue="false"
				        android:summary="@string/pref_summary_notification_reminder_persistent"
				        android:key="notification_reminder_persistent" />
			</PreferenceCategory>
			<PreferenceCategory
				android:title="@string/category_title_email">
				<CheckBoxPreference
				        android:title="@string/pref_title_email_reminders"
				        android:defaultValue="true"
				        android:summary="@string/pref_summary_email_reminders"
				        android:key="allow_email_reminders" />
				<EditTextPreference
		                android:name="@string/pref_name_def_email_rem_sub"
		                android:summary="@string/pref_summary_email_subject"
		                android:defaultValue="@string/default_email_reminder_subject"
		                android:title="@string/pref_title_email_subject"
		                android:key="default_email_reminder_subject"/>
				<EditTextPreference
		                android:name="@string/pref_name_def_email_rem_body"
		                android:summary="@string/pref_summary_email_body"
		                android:defaultValue="@string/default_email_reminder_body"
		                android:title="@string/pref_title_email_body"
		                android:key="default_email_reminder_body"/>
			</PreferenceCategory>
			<PreferenceCategory
				android:title="@string/category_title_sms">
				<CheckBoxPreference
				        android:title="@string/pref_title_sms_reminders"
				        android:defaultValue="true"
				        android:summary="@string/pref_summary_sms_reminders"
				        android:key="allow_sms_reminders" />
				<EditTextPreference
		                android:name="@string/pref_name_def_sms_rem_body"
		                android:summary="@string/pref_summary_sms_body"
		                android:defaultValue="@string/default_sms_reminder_body"
		                android:title="@string/pref_title_sms_body"
		                android:key="default_sms_reminder_body"/>
			</PreferenceCategory>
	    	<PreferenceCategory
				android:title="@string/category_title_integration">
				<CheckBoxPreference
				        android:title="@string/pref_title_allow_min_text"
				        android:defaultValue="true"
				        android:summary="@string/pref_summary_allow_min_text"
				        android:key="allow_minimalistic_text" />
			</PreferenceCategory>
		</PreferenceScreen>
	</PreferenceCategory>
	<PreferenceCategory
		android:title="@string/category_title_currency">
		<CheckBoxPreference
		        android:title="@string/pref_title_allow_custom_currency_symbol"
		        android:defaultValue="false"
		        android:summary="@string/pref_summary_allow_custom_currency_symbol"
		        android:key="allow_custom_currency_symbol" />
		<EditTextPreference
		        android:title="@string/pref_title_custom_currency_symbol"
		        android:defaultValue=""
		        android:summary="@string/pref_summary_custom_currency_symbol"
		        android:key="custom_currency_symbol" />
	</PreferenceCategory>
	<PreferenceCategory
	        android:title="@string/category_title_about">
        <Preference
                android:title="@string/pref_title_contact"
                android:summary="@string/pref_summary_contact"
                android:key="contact" />
        <Preference
                android:title="@string/pref_title_about_min_text"
                android:summary="@string/pref_summary_about_min_text"
                android:key="minimalistic_text_download" />
	</PreferenceCategory>
	<PreferenceCategory
		android:title="@string/category_title_data">
		<Preference
			android:title="@string/pref_title_db_backup"
			android:summary="@string/pref_summary_db_backup"
			android:key="db_backup" />
		<Preference
			android:title="@string/pref_title_db_restore"
			android:summary="@string/pref_summary_db_restore"
			android:key="db_restore" />
	</PreferenceCategory>
</PreferenceScreen>
