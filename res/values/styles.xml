<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="nothing_to_show">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:textColor">#000000</item>
		<item name="android:textSize">15dip</item>
		<item name="android:textStyle">bold</item>
		<item name="android:paddingLeft">10dip</item>
		<item name="android:paddingRight">10dip</item>
		<item name="android:gravity">center</item>
		<item name="android:shadowColor">#000000</item>
		<item name="android:background">#FFFFFF</item>
    </style>
	
	<style name="heading">
	    <item name="android:textSize">20dip</item>
	    <item name="android:textColor">@color/heading</item>
	    <item name="android:textStyle">bold</item>
	</style>
	
	<style name="Theme.Main.Dark" parent="@style/Holo.Theme.Sherlock">
	    <item name="android:actionBarStyle">@style/actionbar</item>
	</style>
	
 	<style name="actionbar" parent="Widget.Sherlock.ActionBar">
	    <item name="android:background">@drawable/header_background</item>
	    <item name="background">@drawable/header_background</item>
	    
	    <item name="backgroundSplit">@drawable/actionbar_split_background</item>
    	<item name="android:backgroundSplit">@drawable/actionbar_split_background</item>
	</style>
	
 	<style name="TextViewEmptyListView">
 	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">fill_parent</item>
	    <item name="android:gravity">center</item>
	    <item name="android:textStyle">bold</item>
 	</style>
 
</resources>