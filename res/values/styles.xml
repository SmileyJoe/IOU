<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="header_title">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">60dip</item>
		<item name="android:textColor">#FFFFFF</item>
		<item name="android:textSize">30dip</item>
		<item name="android:textStyle">bold</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:shadowColor">#000000</item>
		<item name="android:shadowDx">2</item>
		<item name="android:shadowDy">2</item>
		<item name="android:shadowRadius">2</item>
    </style>
    
	<style name="header_wrapper">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">60dip</item>
		<item name="android:background">@drawable/underline</item>
	    <item name="android:layout_marginRight">-2dip</item>
		<item name="android:layout_marginTop">-2dip</item>
		<item name="android:layout_marginLeft">-2dip</item>
    </style>
    
    <style name="header_button">
        <item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_centerVertical">true</item>
		<item name="android:layout_alignParentRight">true</item>
		<item name="android:layout_marginLeft">5dip</item>
		<item name="android:layout_marginRight">5dip</item>
		<item name="android:padding">3dip</item>
    </style>
    
    <style name="drop_menu_item_image">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="drop_menu_item_text">
        <item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_alignParentLeft">true</item>
		<item name="android:paddingLeft">5dip</item>
		<item name="android:paddingRight">25dip</item>
		<item name="android:layout_gravity">center_vertical</item>
    </style>
    
    <style name="drop_menu_item_wrapper">
        <item name="android:layout_height">40dip</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:paddingLeft">5dip</item>
    </style>
    
    <style name="header_drop_down_wrapper">
       	<item name="android:layout_width">160dip</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:visibility">gone</item>
		<item name="android:layout_below">@id/rl_header_wrapper</item>
		<item name="android:orientation">vertical</item>
		<item name="android:background">@color/dark_grey</item>
		<item name="android:layout_marginLeft">20dip</item>
		<item name="android:layout_marginTop">-8dip</item>
    </style>
    
    <style name="header_settings" parent="header_button">
        <item name="android:background">@drawable/settings</item>
    </style>
    <style name="header_filter" parent="header_button">
        <item name="android:background">@drawable/filter</item>
    </style>
    <style name="header_sort" parent="header_button">
        <item name="android:background">@drawable/sort</item>
    </style>
    <style name="header_button_add_user" parent="header_button">
        <item name="android:background">@drawable/add_user</item>
    </style>
    <style name="header_button_add_group" parent="header_button">
        <item name="android:background">@drawable/add_group</item>
    </style>
    <style name="header_overflow" parent="header_button">
        <item name="android:background">@drawable/overflow</item>
    </style>
    <style name="header_button_add_payment" parent="header_button">
        <item name="android:background">@drawable/add_payment</item>
    </style>
    <style name="nothing_to_show">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:textColor">#000000</item>
		<item name="android:textSize">15dip</item>
		<item name="android:textStyle">bold</item>
		<item name="android:paddingLeft">10dip</item>
		<item name="android:paddingRight">10dip</item>
		<item name="android:gravity">center</item>
		<item name="android:shadowColor">#000000</item>
		<item name="android:background">#FFFFFF</item>
    </style>
    
	<style name="dialog_content">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:orientation">vertical</item>
		<item name="android:padding">10dip</item>
	</style>
	
	<style name="heading">
	    <item name="android:textSize">20dip</item>
	    <item name="android:textColor">@color/heading</item>
	    <item name="android:textStyle">bold</item>
	</style>
	
	<style name="Theme.Main.Dark" parent="@style/Holo.Theme.Sherlock">
	    <item name="android:actionBarStyle">@style/actionbar</item>
	    <item name="android:autoCompleteTextViewStyle">@style/Holo.EditText</item>
	</style>
	
 	<style name="actionbar" parent="Widget.Sherlock.ActionBar">
	    <item name="android:background">@drawable/header_background</item>
	    <item name="background">@drawable/header_background</item>
	</style>
 
</resources>